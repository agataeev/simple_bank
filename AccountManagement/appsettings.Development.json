{
  "Logging": {
    "LogLevel": {
      "Default": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Hangfire": "Warning"
      },
      "WriteTo": [
        {
          "Name": "File",
          "Args": {
            "path": "logs/log.txt",
            "rollingInterval": "Day",
            "outputTemplate": "[{Timestamp:HH:mm:ss.fff}] {Level:u3} {RequestId} {Message:lj}{NewLine}{Exception}"
          }
        },
        {
          "Name": "Console",
          "Args": {
            "restrictedToMinimumLevel": "Debug",
            "outputTemplate": "[{Timestamp:HH:mm:ss.fff}] {Level:u3} {RequestId} {Message:lj}{NewLine}{Exception}"
          }
        }]
    }
  },
  "ConnectionStrings" : {
    "Db": "Server=localhost;Port=5432;Database=postgres;User Id=postgres;Password=admin;SearchPath=simple_bank;"
  },
    "AllowedHosts": "*"
}
